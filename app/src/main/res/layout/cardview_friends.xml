<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#a8b6e2"
        app:strokeWidth="1dp"
        app:strokeColor="#000"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="6dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/frineds_name"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ranking_cardview_style"
                    android:fontFamily="@font/solway_extrabold"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textAlignment="textStart"
                    android:letterSpacing="-0.05"
                    android:text="playerName"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                     />

                <TextView
                    android:background="@drawable/ranking_cardview_style"
                    android:id="@+id/friend_status"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/solway_bold"
                    android:shadowColor="@color/black"
                    android:shadowDx="1"
                    android:layout_alignParentRight="true"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="ONLINE"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>